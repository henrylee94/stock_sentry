{
  "name": "Position Sizing",
  "type": "risk_management",
  "category": "capital_allocation",
  "description": "仓位管理策略 - 科学计算每笔交易的投入金额",
  "difficulty": "beginner",
  "importance": "critical",
  
  "methods": {
    "fixed_percentage": {
      "description": "固定百分比法 - 每笔交易固定账户的 X%",
      "formula": "仓位 = 账户净值 × 固定百分比",
      "typical_range": "2-5%",
      "pros": ["简单易用", "自动调整仓位大小"],
      "cons": ["不考虑个别交易风险"],
      "best_for": "初学者"
    },
    "risk_based": {
      "description": "风险百分比法 - 每笔交易风险账户的 X%",
      "formula": "仓位 = (账户净值 × 风险%) / (入场价 - 止损价)",
      "typical_risk": "1-2% per trade",
      "example": {
        "account": 10000,
        "risk_percentage": 2,
        "entry_price": 100,
        "stop_loss": 95,
        "calculation": "(10000 × 0.02) / (100 - 95) = 40 shares"
      },
      "pros": ["精确控制风险", "适应不同止损距离"],
      "cons": ["计算复杂"],
      "best_for": "专业交易者"
    },
    "kelly_criterion": {
      "description": "凯利公式 - 根据胜率和盈亏比优化仓位",
      "formula": "仓位% = (胜率 × 盈亏比 - 败率) / 盈亏比",
      "example": {
        "win_rate": 0.6,
        "win_loss_ratio": 2,
        "calculation": "(0.6 × 2 - 0.4) / 2 = 0.4 = 40%",
        "conservative_use": "使用 1/4 Kelly = 10%"
      },
      "pros": ["数学优化", "长期收益最大化"],
      "cons": ["需要准确的胜率数据", "波动大"],
      "best_for": "有历史数据的策略",
      "warning": "全仓 Kelly 太激进，建议用 1/4 或 1/2 Kelly"
    },
    "volatility_adjusted": {
      "description": "波动率调整法 - 根据股票波动调整仓位",
      "formula": "仓位 = 基础仓位 / (股票ATR / 市场ATR)",
      "logic": "波动大的股票仓位小，波动小的仓位大",
      "pros": ["适应不同风险的股票"],
      "cons": ["计算复杂"],
      "best_for": "组合管理"
    }
  },
  
  "rules": {
